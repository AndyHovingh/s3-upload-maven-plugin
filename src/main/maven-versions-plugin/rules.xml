<ruleset comparisonMethod="maven"
         xmlns="http://mojo.codehaus.org/versions-maven-plugin/rule/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://mojo.codehaus.org/versions-maven-plugin/rule/2.0.0
         http://mojo.codehaus.org/versions-maven-plugin/xsd/rule-2.0.0.xsd
         http://mojo.codehaus.org/versions-maven-plugin/rule/2.0.0 ">
    <rules>
        <rule groupId="org.junit.jupiter">
            <ignoreVersions>
                <ignoreVersion type="regex">(?i).*M(?:-?\d+)?</ignoreVersion><!-- milestones -->
            </ignoreVersions>
        </rule>

        <!-- the pom is configured to support at least
                     a given older version of maven to avoid requiring
                     the newest version of Maven just to use the plugin -->
        <rule groupId="org.apache.maven" artifactId="maven-plugin-api">
            <ignoreVersions>
                <ignoreVersion type="regex">.*</ignoreVersion>
            </ignoreVersions>
        </rule>
        <rule groupId="org.apache.maven.plugin-tools" artifactId="maven-plugin-annotations">
            <ignoreVersions>
                <ignoreVersion type="regex">.*</ignoreVersion>
            </ignoreVersions>
        </rule>

        <rule groupId="org.apache.maven.plugins">
            <ignoreVersions>
                <ignoreVersion type="regex">(?i).*jboss-.+</ignoreVersion>
                <ignoreVersion type="regex">(?i).*jenkins-.+</ignoreVersion>
                <ignoreVersion type="regex">(?i).*M(?:-?\d+)?</ignoreVersion><!-- milestones -->
            </ignoreVersions>
        </rule>
        <rule groupId="org.apache.maven.surefire">
            <ignoreVersions>
                <ignoreVersion type="regex">(?i).*jboss-.+</ignoreVersion>
                <ignoreVersion type="regex">(?i).*jenkins-.+</ignoreVersion>
                <ignoreVersion type="regex">(?i).*M(?:-?\d+)?</ignoreVersion><!-- milestones -->
            </ignoreVersions>
        </rule>
        <rule groupId="com.fasterxml.jackson">
            <ignoreVersions>
                <ignoreVersion type="regex">(?i).*.pr\d+</ignoreVersion>
            </ignoreVersions>
        </rule>
    </rules>
</ruleset>
